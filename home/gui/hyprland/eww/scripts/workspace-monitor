#!/bin/bash

# Continuous workspace monitoring script
get_current_workspace() {
    hyprctl activeworkspace -j 2>/dev/null | nix-shell -p jq --run "jq -r .id" 2>/dev/null || echo "1"
}

# Output initial workspace
get_current_workspace

# Monitor workspace changes continuously
while true; do
    sleep 0.2
    get_current_workspace
done