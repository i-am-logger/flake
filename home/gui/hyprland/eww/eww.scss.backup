* {
  all: unset;
  font-size: 14px;
  font-family: monospace;
}

window {
  background-color: transparent;
}

.bar {
  background-color: #000000;
  color: #545862;
  padding: 0 4px;
}

.workspaces {
  background-color: #000000;
  padding: 0 2px;
}

.workspace-button {
  padding: 0 6px;
  margin: 0 1px;
  color: #fdf6e3;
  background-color: #000000;
  border: none;
  min-width: 16px;
}

.workspace-button.active {
  color: #268bd2;
}

.separator {
  color: #292b2e;
  background-color: #000000;
  padding: 0 3px;
  margin: 0;
}

.clock,
.weather,
.network,
.volume,
.cava,
.battery,
.cpu,
.memory,
.temperature,
.disk {
  background-color: #000000;
  padding: 0 4px;
  margin: 0;
  color: #545862;
}

.volume {
  color: #268bd2;
}

.volume button {
  background-color: transparent;
  color: #268bd2;
  padding: 0;
  margin: 0;
}

.cpu,
.memory,
.temperature {
  color: #fdf6e3;
}

.cava {
  color: #4CAF50;
  font-family: monospace;
  font-weight: bold;
  letter-spacing: 1px;
  background-color: rgba(0, 0, 0, 0.8);
  padding: 2px 6px;
  border-radius: 3px;
}

.network {
  color: #fdf6e3;
}
